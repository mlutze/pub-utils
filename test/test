#!/usr/bin/env bash

set -e

tmpfile=$(mktemp)

name="test-noargs-1"
echo "Testing $name"
../fix-bib -o "$tmpfile" "input/$name.bib"
diff "$tmpfile" "expected/$name.bib"

name="test-noargs-2"
echo "Testing $name"
../fix-bib -o "$tmpfile" "input/$name.bib"
diff "$tmpfile" "expected/$name.bib"

name="test-todo-1"
echo "Testing $name"
../fix-bib -t -o "$tmpfile" "input/$name.bib"
diff "$tmpfile" "expected/$name.bib"

name="test-names-1"
echo "Testing $name"
../fix-bib -n -o "$tmpfile" "input/$name.bib"
diff "$tmpfile" "expected/$name.bib"

name="test-lookup-1"
echo "Testing $name"
../fix-bib -l -o "$tmpfile" "input/$name.bib"
diff "$tmpfile" "expected/$name.bib"

name="test-lookup-2"
echo "Testing $name"
../fix-bib -l -o "$tmpfile" "input/$name.bib"
diff "$tmpfile" "expected/$name.bib"

name="test-replace-1"
echo "Testing $name"
../fix-bib -lr -o "$tmpfile" "input/$name.bib"
diff "$tmpfile" "expected/$name.bib"

name="test-replace-2"
echo "Testing $name"
../fix-bib -lr -o "$tmpfile" "input/$name.bib"
diff "$tmpfile" "expected/$name.bib"

name="test-filter-1"
echo "Testing $name"
../fix-bib -f -o "$tmpfile" "input/$name.bib"
diff "$tmpfile" "expected/$name.bib"

name="test-unused-1"
echo "Testing $name"
../fix-bib -u -o "$tmpfile" "input/$name.bib"
diff "$tmpfile" "expected/$name.bib"

name="test-interactive-1"
echo "Testing $name"
../fix-bib -iX -o "$tmpfile" "input/$name.bib" <<< "10.1234/567890"
diff "$tmpfile" "expected/$name.bib"